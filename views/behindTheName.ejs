<%- include("partials/header.ejs") -%>
    <h1>Behind the Name</h1>
    <div>
        <h2>Please enter your name and API key:</h2>
        <form action="/behindTheName" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name"><p>Try Mat or Bella</p><br>
            <label for="api-key">API Key:</label>
            <input type="text" id="api-key" name="apiKey">
            <p>To generate an API key please visit <a href="https://www.behindthename.com/api/gateway.php">Behind the Name API gateway</a></p><br>
            <input type="submit" value="Submit">
        </form>
    <br>
    
    </div>
    <br>
    <div>
        <%  if(data!==null){ %>
            <% data.forEach(ele=>{ %>
                <%  if(ele.gender=='m') {%>
                    <div class="card" style="background-color:#5300FF;">
                        <div class="name"><p>Name: <%= ele.name %></p></div>
                        <div class="species"><p>Gender: <%= ele.gender %></p></div>
                        <div class="species"><p>Language: <%= ele.usages[0].usage_full %></p></div>
                    </div>
                <% } else if(ele.gender=='f') { %>
                    <div class="card" style="background-color:#FFC0CB;">
                        <div class="name"><p>Name: <%= ele.name %></p></div>
                        <div class="species"><p>Gender: <%= ele.gender %></p></div>
                        <div class="species"><p>Language: <%= ele.usages[0].usage_full %></p></div>
                    </div>
                <% } else { %>                   
                    <div class="card" style="background-color:red;">
                        <div class="name"><p>Name: <%= ele.name %></p></div>
                        <div class="species"><p>Gender: <%= ele.gender %></p></div>
                        <div class="species"><p>Language: <%= ele.usages[0].usage_full %></p></div>
                    </div>
                <% } %>
                
            <% }) %>
        <% } %>
    </div>

<%- include("partials/footer.ejs") -%></br>